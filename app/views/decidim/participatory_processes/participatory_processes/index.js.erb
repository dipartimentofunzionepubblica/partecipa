var $grid = $('#processes-grid');
var $order_by_filters = $grid.find('.processes-grid-order-by');
var $loading = $grid.find('.loading');
<% upcoming_label = t("decidim.usability_mods.processes_index_page.upcoming_processes_label") %>
<% active_label = t("decidim.usability_mods.processes_index_page.active_processes_label") %>
<% ended_label = t("decidim.usability_mods.processes_index_page.ended_processes_label") %>

$grid.find('.card-grid-upcoming').html('<% if upcoming_collection.size > 0 %> <h3 class="section-heading section-heading-process-grid" > <%=upcoming_label%> </h3> <%end%> <%= j(render(upcoming_collection)).strip.html_safe %>');
$grid.find('.card-grid-active').html('<% if active_collection.size > 0 %> <h3 class="section-heading section-heading-process-grid" > <%=active_label%> </h3> <%end%> <%= j(render(active_collection)).strip.html_safe %>');
$grid.find('.card-grid-ended').html('<% if ended_collection.size > 0 %>  <h3 class="section-heading section-heading-process-grid" > <%=ended_label%> </h3> <%end%> <%= j(render(ended_collection)).strip.html_safe %>');
$order_by_filters.html('<%= j(render(partial: "decidim/participatory_processes/participatory_processes/order_by_processes", locals: { include_filter: true })).strip.html_safe %>');
$order_by_filters.foundation();
$loading.hide();